<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="ComboBox" Grid.Row="0" DisplayMemberPath="Login" SelectionChanged="ComboBox_SelectionChanged"/>
        <ListBox x:Name="ListBox" Grid.Row="1" DisplayMemberPath="Login" SelectionMode="Multiple" SelectionChanged="ListBox_SelectionChanged"/>
        <ListView x:Name="ListView" Grid.Row="2" DisplayMemberPath="Login" SelectionMode="Multiple" SelectionChanged="ListView_SelectionChanged"/>
        <Label x:Name="ComboLable" Grid.Column="1" Grid.Row="0"/>
        <Label x:Name="ListBLable" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="ListVLable" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
